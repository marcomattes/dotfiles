{
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strictNullChecks": false,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@enums": [
        "app/enums/enums.ts"
      ],
      "@models": [
        "app/models/index.ts"
      ],
      "@pipes": [
        "app/pipes/index.ts"
      ]
    }
  }
}
